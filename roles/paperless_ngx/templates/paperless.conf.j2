# Paperless-ngx Configuration
# Generated by Ansible

# Redis configuration
PAPERLESS_REDIS={{ paperless_redis }}

# Database configuration
{% if paperless_db_url %}
PAPERLESS_DATABASE_URL={{ paperless_db_url }}
{% elif paperless_dbengine != 'sqlite' %}
PAPERLESS_DBENGINE={{ paperless_dbengine }}
PAPERLESS_DBHOST={{ paperless_dbhost }}
PAPERLESS_DBPORT={{ paperless_dbport }}
PAPERLESS_DBNAME={{ paperless_dbname }}
PAPERLESS_DBUSER={{ paperless_dbuser }}
PAPERLESS_DBPASS={{ paperless_db_password }}
{% endif %}

# Directory configuration
PAPERLESS_CONSUMPTION_DIR={{ paperless_consume_dir }}
PAPERLESS_DATA_DIR={{ paperless_data_dir }}
PAPERLESS_MEDIA_ROOT={{ paperless_media_dir }}

# Security
PAPERLESS_SECRET_KEY={{ paperless_secret_key }}

# URL configuration (if behind reverse proxy)
{% if paperless_url %}
PAPERLESS_URL={{ paperless_url }}
{% endif %}

# Network binding
PAPERLESS_BIND_ADDR=0.0.0.0
PAPERLESS_PORT={{ paperless_webserver_port }}

# OCR and localization
PAPERLESS_OCR_LANGUAGE={{ paperless_ocr_language }}
PAPERLESS_TIME_ZONE={{ paperless_time_zone }}

